<% page_info :title => "Timeline &amp; Graph",
              :breadcrumb => [ link_to(h(@milestone.project.name), "/"), link_to(h(@milestone.name), "/project/#{@milestone.project.id}") ] %>

<div class="graph">
  <table class="timeline">
    <tfoot>
      <tr>
        <% segmented_range(@milestone.start_date, @milestone.end_date, :segments => 15) do |day| %>
          <th><%= day.strftime("%m/%d") %></th>
        <% end %>
      </tr>
    </tfoot>
    <tbody>
      <tr>
        <% value = 15*3 %>
        <% @milestone.start_date.upto(@milestone.end_date) do |day| %>
          <td><%= value = value - rand(5) %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <div id="holder"></div>
</div>

<ol class="timeline">
  <% 10.times do %>
  <li>
    <h3>January 21</h3>
    <span class="big"><%= rand(10) < 5 ? "-" : "+" %><%= rand(15) %></span>
    <ul class="events">
      <li>Rick <strong>closed</strong> <em class="positive">15</em> tickets</li>
      <li>Kyle <strong>opened</strong> <em class="negative">5</em> tickets and <strong>closed</strong> <em class="positive">3</em> tickets</li>
      <li>Courtenay <strong>opened</strong> <em class="negative">5</em> tickets</li>
    </ul>
  </li>
  <% end %>
  <li>
    <h3><%= @milestone.start_date.strftime("%B %e") %></h3>
    <ul class="events">
      <li><strong>Started</strong> tracking milestone</li>
    </ul>
  </li>
</ol>